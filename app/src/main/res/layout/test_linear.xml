<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_00"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/linear_00_tv_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="11"
        android:textSize="20sp" />

    <View
        android:id="@+id/line_00"
        android:layout_width="match_parent"
        android:background="@android:color/darker_gray"
        android:layout_height="3dp" />

    <TextView
        android:id="@+id/linear_00_tv_02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="22"
        android:textSize="20sp" />

    <View
        android:id="@+id/line_01"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background= "#ff0000"
        />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraint_00"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/cons_tv_00"
            android:layout_width="115dp"
            android:layout_height="60dp"
            android:text="cons_tv00 content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>
</LinearLayout>